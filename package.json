{
  "name": "@mfyz/markdown-editor-with-custom-directives",
  "version": "1.0.1",
  "description": "A React markdown editor with custom color and button directives",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/styles/index.css": "./dist/styles/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bash -c 'if lsof -i :5173 > /dev/null 2>&1 || lsof -i :5174 > /dev/null 2>&1 || lsof -i :5175 > /dev/null 2>&1; then echo \"Vite server is already running. Access it in your browser.\"; else vite; fi'",
    "build": "tsc -b && vite build",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "preview": "vite preview",
    "test": "jest --verbose",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@tiptap/extension-color": "^2.11.5",
    "@tiptap/extension-link": "^2.11.5",
    "@tiptap/extension-strike": "^2.11.5",
    "@tiptap/extension-text-style": "^2.11.5",
    "@tiptap/react": "^2.11.5",
    "@tiptap/starter-kit": "^2.11.5",
    "@types/styled-components": "^5.1.34",
    "dompurify": "^3.2.4",
    "marked": "^15.0.7",
    "react-color": "^2.19.3",
    "react-icons": "^5.5.0",
    "styled-components": "^6.1.15",
    "turndown": "^7.2.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@playwright/test": "^1.50.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.14",
    "@types/marked": "^5.0.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/turndown": "^5.0.5",
    "@vitejs/plugin-react": "^4.3.4",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-jest": "^29.2.6",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,json,css,html}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "markdown",
    "editor",
    "tiptap",
    "color",
    "button",
    "directive"
  ],
  "author": "mfyz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mfyz/markdown-editor-with-custom-directives"
  }
}
